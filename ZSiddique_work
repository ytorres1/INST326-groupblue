import re
import pandas
import sys

class RegEx():
    """Uses regex expressions to ensure the program is formatted correctly"""
    def __init__(self, file):
        """Regex to make sure formatting is correct"""
        
        with open(file, 'r', encoding = "utf-8") as f:
            lines = f.readlines()

            hostname_regex = r"(?x)^Hostname:\s(.+)$"
            self.hostnames = []
            
            for line in lines:
                match = re.match(hostname_regex, line)
                if match:
                    self.hostnames.append(match.group(1))
                



    def __str__():
        return f""




if __name__ == "__main__":
    file = sys.argv[1]
    regex = RegEx(file)






class budget_planner():
    """Budget planner using pandas"""
    #Could do a remove item function using loc or iloc
    def __init__(self, budget):
        self.budget = budget
        self.budget_sheet = pandas.DataFrame(columns=['Item', 'Price'])

    def add_item(self, item, price):

        self.budget_sheet = self.budget_sheet.append({'Item': item, 'Price': price})
        self.budget = self.budget - price

    def add_budget(self, budget):
        added_funds = input("How much moeny would you like to add to the budget?")
        self.budget = self.budget + added_funds
    


    def display(self):
        print(f"Party Budget: ${self.budget}")
        print(self.budget_sheet)
        
        
        
